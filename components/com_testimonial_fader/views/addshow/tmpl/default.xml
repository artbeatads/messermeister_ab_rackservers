<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Add and Show Testimonial">
	  <message>Add and Show testimonials</message>

	</layout>
	<fields name="request">
		<fieldset name="request">
			<field name="ascount" type="text"
				description="Pagination Limit"
				default="5"
				extension="com_testimonial_fader"
				label="Pagination Limit"
				required="true"
			/>
			<field name="asshow_menu"
				 type="radio"
				 default="0"
				  class="btn-group"
				 label="Show Menu Name"
				 description="Show Menu Name">
				 <option value="0">JHIDE</option>
				 <option value="1">JSHOW</option>
			</field>
			<field name="asshow_pag"
				 type="radio"
				 default="0"
				  class="btn-group"
				 label="Show Pagination"
				 description="You can hide or show the paginiation">
				 <option value="0">JHIDE</option>
				 <option value="1">JSHOW</option>
			</field>
			
		</fieldset>
	</fields>
	
</metadata>